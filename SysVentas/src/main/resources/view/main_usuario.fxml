<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane fx:id="miContenedor" stylesheets="@/css/estilos.css" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="pe.edu.upeu.sysventas.controller.UsuarioController">

    <children>

        <VBox spacing="10" AnchorPane.bottomAnchor="10" AnchorPane.leftAnchor="10" AnchorPane.rightAnchor="10" AnchorPane.topAnchor="10">

            <!-- ======================================================
                 SECCIÓN SUPERIOR: TÍTULO + BUSCADOR
            ====================================================== -->
            <AnchorPane styleClass="panel-top">
                <children>

                    <Label layoutX="14" layoutY="12" text="Gestión de Usuarios" textFill="DODGERBLUE">
                        <font><Font name="System Bold" size="20" /></font>
                    </Label>

                    <Label layoutX="332.0" layoutY="51.0" text="Buscar Usuario" />
                    <TextField fx:id="txtFiltroDato" layoutX="332" layoutY="68" prefHeight="28" prefWidth="200" promptText="Buscar usuario" />

                    <Button layoutX="540" layoutY="67" mnemonicParsing="false" styleClass="btnBuscar" text="Buscar" />
                </children>
            </AnchorPane>

            <!-- ======================================================
                 SECCIÓN DEL FORMULARIO
            ====================================================== -->
            <AnchorPane prefHeight="180.0" prefWidth="657.0" styleClass="panel-form">
                <children>

                    <GridPane hgap="5" vgap="5">
                        <padding>
                            <Insets bottom="10" left="10" right="10" top="10" />
                        </padding>

                        <columnConstraints>
                            <ColumnConstraints prefWidth="120.0" />
                            <ColumnConstraints maxWidth="175.0" minWidth="157.0" prefWidth="157.0" />
                            <ColumnConstraints maxWidth="156.0" minWidth="125.0" prefWidth="156.0" />
                            <ColumnConstraints maxWidth="195.0" minWidth="167.0" prefWidth="167.0" />
                        </columnConstraints>

                        <children>

                            <!-- Título -->
                            <Label text="Registro de Usuario" GridPane.columnSpan="4" GridPane.halignment="CENTER">
                                <font><Font name="System Bold" size="14" /></font>
                            </Label>

                            <!-- Usuario -->
                            <Label text="Usuario" GridPane.rowIndex="1" />
                            <TextField fx:id="txtUser" prefHeight="25.0" prefWidth="472.0" promptText="Ingrese el usuario" GridPane.columnIndex="1" GridPane.columnSpan="3" GridPane.rowIndex="1" />

                            <!-- Clave -->
                            <Label text="Clave" GridPane.rowIndex="2" />
                            <PasswordField fx:id="txtClave" promptText="Ingrese la clave" GridPane.columnIndex="1" GridPane.rowIndex="2" />

                            <!-- Perfil -->
                            <Label prefHeight="17.0" prefWidth="31.0" text="Perfil" GridPane.columnIndex="2" GridPane.rowIndex="2">
                        <GridPane.margin>
                           <Insets left="100.0" />
                        </GridPane.margin></Label>
                            <ComboBox fx:id="cbxPerfil" maxWidth="1.7976931348623157E308" prefHeight="26" prefWidth="145.0" GridPane.columnIndex="3" GridPane.rowIndex="2" />

                            <!-- Botones -->
                            <Button onAction="#validarFormulario" prefHeight="33.0" prefWidth="119.0" styleClass="btnGuardar" text="Guardar" GridPane.columnIndex="1" GridPane.rowIndex="5" />

                            <Button onAction="#clearForm" prefHeight="33.0" prefWidth="125.0" styleClass="btnCancelar" text="Limpiar/Nuevo" GridPane.columnIndex="2" GridPane.rowIndex="5" />

                            <!-- Mensaje -->
                            <Label fx:id="lbnMsg" style="-fx-text-fill: #444;" GridPane.columnSpan="4" GridPane.rowIndex="6" />

                        </children>

                        <rowConstraints>
                            <RowConstraints />
                            <RowConstraints />
                            <RowConstraints />
                            <RowConstraints />
                            <RowConstraints />
                            <RowConstraints />
                     <RowConstraints />
                        </rowConstraints>

                    </GridPane>

                </children>
            </AnchorPane>

            <!-- ======================================================
                 TABLA ABAJO
            ====================================================== -->
            <AnchorPane styleClass="panel-table">
                <children>
                    <TableView fx:id="tableView" prefHeight="300" AnchorPane.bottomAnchor="5" AnchorPane.leftAnchor="5" AnchorPane.rightAnchor="5" AnchorPane.topAnchor="5" />
                </children>
            </AnchorPane>

        </VBox>

    </children>

    <padding>
        <Insets bottom="10" left="10" right="10" top="10" />
    </padding>

</AnchorPane>
